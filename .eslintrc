{
  "extends": ["airbnb", "prettier/react", "plugin:prettier/recommended"],
  "rules": {
    "import/extensions": "off",
    "react/jsx-filename-extension": ["error", {
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx"
      ]
    }]
  },
  "globals": {
    "document": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}
